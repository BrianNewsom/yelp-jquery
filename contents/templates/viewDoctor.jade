//Timing information
h4 Timings
h6 ____________________________________________________________________________
div.row
  div.four.column 
   h6 Status:
  div.four.column
   if item.open 
     b="OPEN"
   else
     b="CLOSED"
  div.ten.columns
   if item.attributes["By Appointment Only"] 
     b="By Appointment Only"
   else
     b="Drop-in!"
br

//detailed timing information
div.row
 div.five.columns
  h5 Day 
 div.three.columns 
  h5 Open
 div.three.columns
  h5 Close

if item.hours
  each day,index in item.hours
    div.row
      div.five.columns
        b= index
      div.three.columns
        h6=day.open + ' AM'
      div.three.columns
        h6=day.close + ' PM'
