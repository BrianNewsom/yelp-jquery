div.twelve.columns
    h3=item.name
    span.i.fa.fa-star.fa-lg
    span.i.fa.fa-star.fa-lg
    span.i.fa.fa-star.fa-lg
    span.i.fa.fa-star-half.fa-lg
  div.ten.columns
